# Image Generation MCP Server - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# Provider Selection
# =============================================================================
# Choose one: openai | stable-diffusion | custom
IMAGE_PROVIDER=openai

# =============================================================================
# OpenAI Configuration (if using IMAGE_PROVIDER=openai)
# =============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=org-your-org-id

# =============================================================================
# Stable Diffusion Configuration (if using IMAGE_PROVIDER=stable-diffusion)
# =============================================================================
# Automatic1111 Web UI API endpoint
SD_API_URL=http://localhost:7860
SD_DEFAULT_MODEL=v1-5-pruned-emaonly.safetensors

# =============================================================================
# Custom Provider Configuration (if using IMAGE_PROVIDER=custom)
# =============================================================================
CUSTOM_API_URL=https://your-api-endpoint.com
CUSTOM_API_KEY=your-api-key

# =============================================================================
# File Storage
# =============================================================================
# Where to save generated images
IMAGE_OUTPUT_DIR=~/Downloads/ai-images

# Where to store history database
HISTORY_DB_PATH=~/Downloads/ai-images/data/history.db

# =============================================================================
# Thumbnail Settings
# =============================================================================
# Enable thumbnail generation for Claude Desktop previews
THUMBNAIL_ENABLED=true

# Thumbnail size in pixels (default: 128, max: 512)
THUMBNAIL_SIZE=128

# JPEG quality for thumbnails (1-100, default: 60)
THUMBNAIL_QUALITY=60

# =============================================================================
# Metadata Embedding
# =============================================================================
# Embed generation metadata into image files
EMBED_METADATA=true

# Metadata level: minimal | standard | full
METADATA_LEVEL=standard

# =============================================================================
# Async Job Management
# =============================================================================
# Maximum number of concurrent jobs
MAX_CONCURRENT_JOBS=2

# Job timeout in milliseconds (default: 5 minutes)
JOB_TIMEOUT=300000

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite cache size (number of pages)
DB_CACHE_SIZE=10000

# Database busy timeout in milliseconds
DB_BUSY_TIMEOUT=5000

# =============================================================================
# Backup Settings
# =============================================================================
# Enable automatic backups
BACKUP_ENABLED=true

# Backup directory
BACKUP_DIR=~/backups/image-history

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Debug & Logging
# =============================================================================
# Enable debug logging
DEBUG=false

# Log level: error | warn | info | debug
LOG_LEVEL=info

# =============================================================================
# MCP Server Configuration
# =============================================================================
# Server name shown in Claude Desktop
SERVER_NAME=image-generation-server

# Server version
SERVER_VERSION=1.0.0
